{
  "name": "pixelclock",
  "version": "1.0.0",
  "main": "index.js",
  "license": "MIT",
  "devDependencies": {
    "@types/node": "^18.11.18",
    "@types/rpi-ws281x-native": "^1.0.0",
    "ts-node": "^10.9.1",
    "typescript": "^4.9.4"
  },
  "scripts": {
    "start": "pm2 start dist/index.js --name pixelclock",
    "stop": "pm2 stop pixelclock",
    "restart": "pm2 restart pixelclock",
    "delete": "pm2 delete pixelclock",
    "is-running": "exit ${$(pm2 pid pixelclock):=0}",
    "startup": "pm2 startup systemd -u $USER --hp $HOME",
    "save": "pm2 save",
    "build": "tsc",
    "dev": "ts-node src/index.ts"
  },
  "dependencies": {
    "pm2": "^5.2.2",
    "rpi-ws281x-native": "^1.0.4",
    "zod": "^3.20.2"
  }
}
